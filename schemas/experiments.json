{
  "$schema": "http://json-schema.org/schema#",
  "$id": "https://raw.githubusercontent.com/dmbch/craps/master/schemas/experiments.json",
  "definitions": {
    "experiment": {
      "title": "Craps Experiment",
      "type": "object",
      "properties": {
        "name": {
          "type": "string",
          "pattern": "[a-z0-9_]"
        },
        "hashId": {
          "type": "string"
        },
        "startDate": {
          "type": "string",
          "format": "date-time"
        },
        "endDate": {
          "type": "string",
          "format": "date-time"
        },
        "conditions": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/condition"
          }
        },
        "variants": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/variant"
          }
        }
      },
      "required": ["name", "hashId", "variants"],
      "additionalProperties": false
    },
    "condition": {
      "title": "Craps Experiment Condition",
      "type": "object",
      "properties": {
        "operator": {
          "type": "string",
          "enum": ["=", "!", "<", ">"]
        },
        "key": {
          "type": "string"
        },
        "value": {
          "oneOf": [
            {
              "type": "string"
            },
            {
              "type": "number"
            },
            {
              "type": "boolean"
            }
          ]
        }
      },
      "required": ["operator", "key", "value"],
      "additionalProperties": false
    },
    "variant": {
      "title": "Craps Variant",
      "type": "object",
      "properties": {
        "ratio": {
          "type": "number",
          "minimum": 0,
          "maximum": 100
        },
        "variant": {
          "type": "string",
          "pattern": "[a-z0-9_]"
        }
      },
      "required": ["ratio", "variant"],
      "additionalProperties": false
    }
  },
  "title": "Craps Experiment Collection",
  "type": "array",
  "items": {
    "$ref": "#/definitions/experiment"
  }
}
